[Unit]
Description=honeygain
Requires=network-online.target
After=network.target network-online.target

[Service]
Type=simple
User=root
Group=root
EnvironmentFile=/etc/script/login
ExecStart=/root/.local/bin/honeygain -email "${USER_C}" -pass "${PASS}" -device "${DEVICE}" -tou-accept
Nice=-20
Restart=always
RestartSec=5
StandardOutput=null
StandardError=null

[Install]
WantedBy=multi-user.target
